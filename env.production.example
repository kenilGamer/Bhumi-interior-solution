# Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Domain Configuration
DOMAIN=bhumiinteriorsolution.in
API_SUBDOMAIN=api.bhumiinteriorsolution.in
WWW_DOMAIN=www.bhumiinteriorsolution.in

# MongoDB Atlas Configuration (Cloud Database)
# Use this if you're using MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/bhumi-interior?retryWrites=true&w=majority&appName=Cluster0

# OR Local MongoDB Configuration (Docker Container)
# Uncomment these if using local MongoDB instead of Atlas
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=change-this-secure-password-123
# MONGO_DATABASE=bhumi-interior

# Set to 'atlas' if using MongoDB Atlas, or 'local' if using Docker MongoDB
MONGO_TYPE=atlas

# JWT Configuration
JWT_SECRET=change-this-to-a-very-secure-random-string-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for password reset)
EMAIL_USER=bhumiinteriorsolution@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# SSL Configuration
SSL_EMAIL=bhumiinteriorsolution@gmail.com

# Backup Configuration
BACKUP_PATH=/var/backups/bhumi-interior

# Node Environment
NODE_ENV=production